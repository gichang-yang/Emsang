<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wala.wala.yang_gichang.emsang.MenuActivity"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="술게임\n(Select_Game)"
            android:id="@+id/button"
            android:layout_gravity="center_vertical"
            android:background="#dde4f1"
            android:clickable="true"
            style="@style/Widget.AppCompat.Button"
            android:layout_margin="7dp"
            android:layout_weight="3"
            android:padding="5dp"
            android:textSize="18dp"
            android:alpha="178"
            android:gravity="center">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:layout_gravity="center_vertical|right"
            android:background="@color/colorPrimary"
            android:layout_margin="7dp"
            android:textSize="18dp"
            android:textStyle="normal"
            android:allowUndo="false"
            android:padding="5dp"
            android:gravity="center"
            android:text="제비뽑기\n(Choose)"
            android:layout_weight="1"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1">

        <Button
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:text="개발자 프로필\n(Profile)"
            android:id="@+id/button5"
            android:background="@color/colorPrimary"
            android:layout_margin="7dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:textColor="#ffffff" />

        <Button

            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:text="게임검색\n(Search)"
            android:id="@+id/button3"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="7dp"
            android:textSize="18dp"
            android:gravity="center"
            android:background="#dde4f1"
            android:layout_weight="0.6" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="  광고(ad)"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:background="@mipmap/rip_van"
            android:layout_margin="7dp"
            android:gravity="top|left"
            android:textColor="@android:color/background_light"
            android:textSize="15dp"
            android:layout_weight="1" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="나가기\n(Exit)"
            android:id="@+id/button6"
            android:onClick="exit"
            android:textStyle="bold"
            android:singleLine="false"
            android:breakStrategy="high_quality"
            android:background="@color/colorPrimary"
            android:layout_margin="7dp"
            android:padding="5dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
